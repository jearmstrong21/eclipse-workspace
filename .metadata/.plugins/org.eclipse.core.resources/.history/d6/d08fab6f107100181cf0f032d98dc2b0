package co.megadodo.terraingen1.block;

import com.jme3.math.ColorRGBA;

import co.megadodo.mcclone1.AtlasPosition;

//A BlockState has a meshType, matType, color data for all 6 faces and texture data for all 6 faces
//It also has utility methods for setting all colors, all textures and determining if a face is visible towards another blockstate
//BlockStates are created by Blocks
//So for something like a lamp that can be on or off:
//It has a blockstate for on and off - seperate states, same block
//TODO: blockstates have lighting values
public class BlockState {
	
	public MeshType mesh;
	public MatType mat;
	public ColorRGBA cxmi=ColorRGBA.White,cxpl=ColorRGBA.White,cymi=ColorRGBA.White,cypl=ColorRGBA.White,czmi=ColorRGBA.White,czpl=ColorRGBA.White;
	public AtlasPosition xmi,xpl,ymi,ypl,zmi,zpl;
	
	public void setColor(ColorRGBA col) {
		cxmi=cxpl=cymi=cypl=czmi=czpl=col;
	}
	
	public void setTexture(AtlasPosition ap) {
		xmi=xpl=ymi=ypl=zmi=zpl=ap;
	}
	
	public static boolean isAVisibleToB(BlockState a, BlockState b) {
		if(a==null)return true;
		if(b==null)return true;
		boolean aTransp = a.mat==MatType.Transparent;
		boolean bTransp = b.mat==MatType.Transparent;
		if(aTransp==true&&bTransp==true)return false;
		if(aTransp)return true;
		if(bTransp)return true;
		return false;
	}

}
