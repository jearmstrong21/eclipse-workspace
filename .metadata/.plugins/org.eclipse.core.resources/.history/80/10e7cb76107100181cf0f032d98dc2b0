package co.megadodo.terraingen1.gen.noise;

//An abstract noisemodule
public abstract class NoiseModule {
	
	public NoiseModule[] sources;
	
	public NoiseModule(int numSources) {
		sources=new NoiseModule[numSources];
	}
	
	public void setSourceModule(int n,NoiseModule nm) {
		sources[n]=nm;
	}
	
	public NoiseModule getSourceModule(int n) {
		return sources[n];
	}
	
	public abstract float getValue(float x,float y,float z);

}
