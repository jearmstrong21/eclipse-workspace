package co.megadodo.terraingen1.gen.noise;

//adds 2 noisemodules
public class ModuleAdd extends NoiseModule {

	public ModuleAdd(NoiseModule nm0, NoiseModule nm1) {
		super(2);
		setSourceModule(0, nm0);
		setSourceModule(1, nm1);
	}

	@Override
	public float getValue(float x, float y, float z) {
		return getSourceModule(0).getValue(x, y, z) + getSourceModule(1).getValue(x, y, z);
	}

}
