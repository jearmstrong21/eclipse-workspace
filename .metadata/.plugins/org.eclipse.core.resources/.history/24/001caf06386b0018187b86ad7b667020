package co.megadodo.lwjglswingshaderfun;

import java.nio.FloatBuffer;

public class BufferUtils {
	
	private BufferUtils() {
		
	}
	
	public static FloatBuffer createFloatBuffer(Vector3f...v3fs) {
		FloatBuffer fb=FloatBuffer.allocate(v3fs.length*3);
		for(Vector3f v:v3fs) {
			fb.put(v.x);
			fb.put(v.y);
			fb.put(v.z);
		}
		return fb;
	}
	

	
	public static FloatBuffer createFloatBuffer(Vector2f...v2fs) {
		FloatBuffer fb=FloatBuffer.allocate(v2fs.length*2);
		for(Vector3f v:v2fs) {
			fb.put(v.x);
			fb.put(v.y);
		}
		return fb;
	}
	
	

}
